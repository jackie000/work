清除10天前的bin-log日志
PURGE MASTER LOGS BEFORE DATE_SUB( NOW( ), INTERVAL 10 DAY);


mysql -uroot -e 'show processlist\G'|grep 'Info'|grep -v "NULL"|awk -F ":" '{print $2}'|sort|uniq -c|sort -rn;



